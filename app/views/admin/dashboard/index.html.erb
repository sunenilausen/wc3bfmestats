<% content_for :title, "Admin" %>

<div class="w-full">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Admin Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <%= link_to admin_analytics_path, class: "bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow" do %>
      <div class="text-lg font-semibold text-gray-700">Analytics</div>
      <div class="text-sm text-gray-500 mt-1">View page visits and traffic stats</div>
    <% end %>

    <%= link_to admin_suspicious_matches_path, class: "bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow" do %>
      <div class="text-lg font-semibold text-gray-700">Suspicious Matches</div>
      <div class="text-sm text-gray-500 mt-1">Review matches with potentially incorrect results</div>
    <% end %>
  </div>
</div>
