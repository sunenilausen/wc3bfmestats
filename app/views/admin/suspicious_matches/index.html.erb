<% content_for :title, "Suspicious Matches" %>

<div class="w-full">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Suspicious Matches</h1>

  <p class="text-sm text-gray-600 mb-4">
    These matches may have incorrect victory data. Review and update if needed.
  </p>

  <% if @suspicious_matches.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Match</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Winner</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Reasons</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @suspicious_matches.each do |result| %>
            <% match = result.match %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm">
                <%= link_to match.id, match_path(match), class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600">
                <%= match.uploaded_at&.strftime("%Y-%m-%d") %>
              </td>
              <td class="px-4 py-3 text-sm">
                <span class="px-2 py-1 rounded text-xs font-medium <%= match.good_victory ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= match.good_victory ? "Good" : "Evil" %>
                </span>
              </td>
              <td class="px-4 py-3 text-sm text-gray-600">
                <ul class="list-disc list-inside">
                  <% result.reasons.each do |reason| %>
                    <li class="<%= reason.include?('Major upset') ? 'text-red-600 font-medium' : (reason.include?('Upset:') ? 'text-orange-600' : '') %>">
                      <%= reason %>
                    </li>
                  <% end %>
                </ul>
              </td>
              <td class="px-4 py-3 text-sm">
                <%= link_to "Edit", edit_match_path(match), class: "text-blue-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p class="text-sm text-gray-500 mt-4">
      <% if @show_all %>
        Found <%= @suspicious_matches.size %> suspicious match(es).
        <%= link_to "Show first 100", admin_suspicious_matches_path, class: "text-blue-600 hover:underline" %>
      <% else %>
        Showing first <%= @suspicious_matches.size %> suspicious match(es).
        <%= link_to "Show all (slow)", admin_suspicious_matches_path(all: true), class: "text-blue-600 hover:underline" %>
      <% end %>
    </p>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center text-gray-500">
      No suspicious matches found.
    </div>
  <% end %>
</div>
