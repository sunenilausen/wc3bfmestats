  <% end %>

  <h1 class="font-bold text-4xl">Showing appearance</h1>

  <%= render @appearance %>

  <%= link_to "Back to appearances", appearances_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
