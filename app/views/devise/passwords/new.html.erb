<div class="min-h-[60vh] flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Forgot your password?</h2>
      <p class="text-sm text-gray-500 text-center mb-6">Enter your email and we'll send you reset instructions.</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification message: "Please fix the errors below:", class: "mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-md text-sm" %>

        <div class="space-y-4">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
        </div>

        <div class="mt-6">
          <%= f.button :submit, "Send reset instructions", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
