<div class="min-h-[60vh] flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Edit Account</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification message: "Please fix the errors below:", class: "mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-md text-sm" %>

        <div class="space-y-4">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="text-sm text-amber-600 bg-amber-50 p-2 rounded">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,
                      hint: "Leave blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "text-xs text-gray-500 mt-1" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <hr class="my-4 border-gray-200">

          <%= f.input :current_password,
                      hint: "We need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "text-xs text-gray-500 mt-1" } %>
        </div>

        <div class="mt-6">
          <%= f.button :submit, "Update", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <%= link_to "Back", :back, class: "text-sm text-blue-600 hover:underline" %>
      </div>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Cancel my account</h3>
        <p class="text-sm text-gray-500 mb-3">Unhappy? You can delete your account here.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { turbo_confirm: "Are you sure? This action cannot be undone." }, class: "py-2 px-4 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md transition duration-200" %>
      </div>
    </div>
  </div>
</div>
