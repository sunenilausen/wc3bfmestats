<div class="min-h-[60vh] flex items-center justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.input :remember_me, as: :boolean, wrapper: false, input_html: { class: "h-4 w-4 text-blue-600 border-gray-300 rounded" }, label_html: { class: "ml-2 text-sm text-gray-600" } %>
            </div>
          <% end %>
        </div>

        <div class="mt-6">
          <%= f.button :submit, "Log in", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <%= render "devise/shared/links" %>
      </div>

      <% if Rails.env.development? || Rails.env.test? %>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <%= button_to "Dev: Sign in as Admin", dev_sign_in_path, method: :post, class: "w-full py-2 px-4 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-md transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
