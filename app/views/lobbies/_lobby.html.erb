<% editable ||= false %>
<% good_players = lobby.lobby_players.includes(:faction, :player).select { |lp| lp.faction&.good? } %>
<% evil_players = lobby.lobby_players.includes(:faction, :player).select { |lp| lp.faction && !lp.faction.good? } %>
<% good_with_players = good_players.select { |lp| lp.player.present? } %>
<% evil_with_players = evil_players.select { |lp| lp.player.present? } %>
<% good_avg_elo = good_with_players.any? ? (good_with_players.sum { |lp| lp.player.elo_rating.to_i } / good_with_players.size) : 0 %>
<% evil_avg_elo = evil_with_players.any? ? (evil_with_players.sum { |lp| lp.player.elo_rating.to_i } / evil_with_players.size) : 0 %>
<% col_count = editable ? 4 : 11 %>

<div id="<%= dom_id lobby %>" class="w-full sm:w-auto my-5 space-y-5" data-controller="<%= 'auto-submit' if editable %>">
  <%= simple_form_for(lobby, data: editable ? { auto_submit_target: "form", turbo_action: "replace" } : {}) do |f| %>
    <% if editable %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <% end %>

    <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-lg shadow-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faction</th>
          <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player</th>
          <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ELO</th>
          <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">W/L</th>
          <% unless editable %>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Win rate">Win%</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="100 day form (any faction)">100d</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="1 year with this faction">1y Fac</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Times top hero killer on team %">TopHK%</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Average hero kill contribution">HK%</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Times top unit killer on team %">TopUK%</th>
            <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Average unit kill contribution">UK%</th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" data-controller="average-elo">
        <tr class="bg-gray-100">
          <td colspan="<%= col_count %>" class="px-2 py-1 text-left text-sm text-gray-500 font-medium">Forces of Middle Earth</td>
        </tr>
        <%= render partial: "lobbies/lobby_player_row", collection: good_players, as: :lp, locals: { lobby: lobby, editable: editable, team_number: 1, lobby_player_stats: @lobby_player_stats || {}, faction_specific_stats: @faction_specific_stats || {}, recent_stats: @recent_stats || {} } %>
        <tr class="bg-gray-50">
          <td class="px-2 py-1 font-bold text-sm">Average ELO</td>
          <td class="px-2 py-1"></td>
          <td class="px-2 py-1 font-bold text-sm"><span data-average-elo-target="value"><%= good_avg_elo %></span></td>
          <td class="px-2 py-1" colspan="<%= col_count - 3 %>"></td>
        </tr>
      </tbody>
      <tbody class="bg-white divide-y divide-gray-200" data-controller="average-elo">
        <tr class="bg-gray-100">
          <td colspan="<%= col_count %>" class="px-2 py-1 text-left text-sm text-gray-500 font-medium">Forces of Sauron</td>
        </tr>
        <%= render partial: "lobbies/lobby_player_row", collection: evil_players, as: :lp, locals: { lobby: lobby, editable: editable, team_number: 2, lobby_player_stats: @lobby_player_stats || {}, faction_specific_stats: @faction_specific_stats || {}, recent_stats: @recent_stats || {} } %>
        <tr class="bg-gray-50">
          <td class="px-2 py-1 font-bold text-sm">Average ELO</td>
          <td class="px-2 py-1"></td>
          <td class="px-2 py-1 font-bold text-sm"><span data-average-elo-target="value"><%= evil_avg_elo %></span></td>
          <td class="px-2 py-1" colspan="<%= col_count - 3 %>"></td>
        </tr>
      </tbody>
      <% if editable %>
        <%# Hidden select for form submission - managed by JS observers column %>
        <select name="lobby[observer_ids][]" multiple class="hidden" id="observer-select" data-action="change->auto-submit#submit">
          <% @players_for_select.each do |player| %>
            <option value="<%= player.id %>" <%= "selected" if lobby.observer_ids.include?(player.id) %>>
              <%= player.nickname %>
            </option>
          <% end %>
        </select>
      <% elsif lobby.observers.any? %>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr class="bg-gray-100">
            <td colspan="<%= col_count %>" class="px-2 py-1 text-left text-sm text-gray-500 font-medium">Observers</td>
          </tr>
          <% lobby.observers.each do |observer| %>
            <% obs_stats = @lobby_player_stats&.dig(observer.id) %>
            <% obs_recent = @recent_stats&.dig(observer.id) %>
            <tr>
              <td class="px-2 py-1 whitespace-nowrap text-sm" colspan="2">
                <%= link_to observer.nickname, player_path(observer), class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-2 py-1 whitespace-nowrap text-sm"><%= observer.elo_rating&.round || "-" %></td>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats %>
                  <span class="text-green-600"><%= obs_stats[:wins] %>W</span>/<span class="text-red-600"><%= obs_stats[:losses] %>L</span>
                <% else %>
                  -
                <% end %>
              </td>
              <%# Win% %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats && obs_stats[:total_matches] > 0 %>
                  <%= number_with_precision(obs_stats[:wins].to_f / obs_stats[:total_matches] * 100, precision: 0) %>%
                <% else %>
                  -
                <% end %>
              </td>
              <%# 100d %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_recent %>
                  <span class="text-green-600"><%= obs_recent[:recent_wins] %></span>/<span class="text-red-600"><%= obs_recent[:recent_losses] %></span>
                <% else %>
                  -
                <% end %>
              </td>
              <%# 1y Fac - N/A for observers %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">-</td>
              <%# Top HK% %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats && obs_stats[:total_matches] > 0 %>
                  <%= number_with_precision(obs_stats[:times_top_hero_kills].to_f / obs_stats[:total_matches] * 100, precision: 0) %>%
                <% else %>
                  -
                <% end %>
              </td>
              <%# HK% %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats %><%= obs_stats[:avg_hero_kill_contribution] %>%<% else %>-<% end %>
              </td>
              <%# Top UK% %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats && obs_stats[:total_matches] > 0 %>
                  <%= number_with_precision(obs_stats[:times_top_unit_kills].to_f / obs_stats[:total_matches] * 100, precision: 0) %>%
                <% else %>
                  -
                <% end %>
              </td>
              <%# UK% %>
              <td class="px-2 py-1 whitespace-nowrap text-sm">
                <% if obs_stats %><%= obs_stats[:avg_unit_kill_contribution] %>%<% else %>-<% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>

    <%# Prediction bar %>
    <% if editable %>
      <div id="prediction" class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Predicted Outcome</h3>
        <div class="flex items-center gap-2">
          <span class="text-green-700 font-medium">Good</span>
          <div class="flex-1 h-6 bg-gray-200 rounded-full overflow-hidden">
            <div id="good-win-bar" class="h-full bg-green-500 transition-all duration-300" style="width: 50%"></div>
          </div>
          <span class="text-red-700 font-medium">Evil</span>
        </div>
        <div class="flex justify-between mt-1 text-sm">
          <span id="good-win-pct" class="text-green-700">50%</span>
          <span id="evil-win-pct" class="text-red-700">50%</span>
        </div>
      </div>
    <% elsif good_avg_elo > 0 && evil_avg_elo > 0 %>
      <% good_expected = 1.0 / (1 + 10 ** ((evil_avg_elo - good_avg_elo) / 400.0)) %>
      <% good_pct = (good_expected * 100).round %>
      <% evil_pct = 100 - good_pct %>
      <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Predicted Outcome</h3>
        <div class="flex items-center gap-2">
          <span class="text-green-700 font-medium">Good</span>
          <div class="flex-1 h-6 bg-red-500 rounded-full overflow-hidden">
            <div class="h-full bg-green-500" style="width: <%= good_pct %>%"></div>
          </div>
          <span class="text-red-700 font-medium">Evil</span>
        </div>
        <div class="flex justify-between mt-1 text-sm">
          <span class="text-green-700"><%= good_pct %>%</span>
          <span class="text-red-700"><%= evil_pct %>%</span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
