<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="mb-4">
      <%= f.input :played_at, as: :string, input_html: { type: "datetime-local", class: "form-control", value: (@match.played_at || Time.current).strftime("%Y-%m-%dT%H:%M") }, label: "Played At" %>
    </div>
    <%
=begin%>
 <div class="mb-4">
      <%= f.input :seconds, as: :integer, label: "Duration (seconds)", input_html: { class: "form-control w-32", min: 0, placeholder: "e.g. 360" }, hint: "Enter the match duration in seconds" %>
    </div>
<%
=end%>
    <div class="flex items-center mb-4">
      <%= f.input :good_victory, as: :boolean, label: "Good Victory?", inline_label: true, input_html: { class: "form-checkbox h-5 w-5 text-blue-600" }, wrapper_html: { class: "flex items-center" } %>
    </div>

    <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-lg shadow-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faction</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Kills</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hero Kills</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @match.appearances.each do |appearance| %>
          <%= f.simple_fields_for :appearances, appearance || appearance.build do |af| %>
            <tr class="nested-fields">
              <td class="px-4 py-2 whitespace-nowrap">
                <span style="display: inline-block; width: 16px; height: 16px; background-color: <%= appearance.faction.color %>; border: 1px solid #000; vertical-align: middle; margin-right: 6px;"></span>
                <span><%= appearance.faction.name %></span>
              </td>
              <td class="px-4 py-2 whitespace-nowrap">
                <%= af.input :faction_id, as: :hidden, input_html: { value: appearance.faction_id } %>
                <%= af.input :player_id, collection: Player.all, label_method: :nickname, label: false, selected: Player.all[@match.appearances.index(appearance)]&.id, input_html: { class: "form-control" } %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap">
                <%= af.input :unit_kills, label: false, input_html: { class: "form-control", type: "text", inputmode: "numeric", pattern: "[0-9]*" } %>
              </td>
              <td class="px-4 py-2 whitespace-nowrap">
                <%= af.input :hero_kills, label: false, input_html: { class: "form-control", type: "text", inputmode: "numeric", pattern: "[0-9]*" } %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="form-actions mt-4">
    <%= f.button :submit, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
