<%= simple_form_for(@match) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="mb-2">
      <%= f.input :played_at, as: :string, input_html: { type: "datetime-local", class: "form-control py-1 text-sm h-8", value: (@match.played_at || Time.current).strftime("%Y-%m-%dT%H:%M") }, label: "Played At", wrapper_html: { class: "flex items-center" }, label_html: { class: "mr-2 min-w-[80px] text-sm" } %>
    </div>

    <div class="mb-2">
      <%= f.input :seconds, as: :string, label: "Duration", input_html: { class: "form-control w-24 py-1 text-sm h-8 placeholder-gray-400 italic", min: 0, placeholder: "e.g. 1:20" }, wrapper_html: { class: "flex items-center" }, label_html: { class: "mr-2 min-w-[80px] text-sm" } %>
      <div class="text-xs text-gray-500 mt-0.5 ml-1">Format: h:mm:ss (hours optional)</div>
    </div>

    <div class="flex items-center mb-4">
      <%= f.input :good_victory, as: :boolean, label: "Good Victory?", inline_label: true, input_html: { class: "form-checkbox h-5 w-5 text-blue-600" }, wrapper_html: { class: "flex items-center" } %>
    </div>

    <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-lg shadow-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faction</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Kills</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hero Kills</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" data-controller="average-elo">
        <tr class="bg-gray-100">
          <td colspan="5" class="px-4 py-2 text-left text-sm text-gray-500 font-medium">Forces of Middle Earth</td>
        </tr>
        <%= render partial: "matches/form_appearances", locals: { f: f, appearances: @match.appearances[0..4], team_number: 1 } %>
      </tbody>
      <tbody class="bg-white divide-y divide-gray-200" data-controller="average-elo">
        <tr class="bg-gray-100">
          <td colspan="5" class="px-4 py-2 text-left text-sm text-gray-500 font-medium">Forces of Sauron</td>
        </tr>
        <%= render partial: "matches/form_appearances", locals: { f: f, appearances: @match.appearances[5..9], team_number: 2 } %>
      </tbody>
    </table>
  </div>

  <div class="my-4 p-4 bg-gray-50 border border-gray-200 rounded">
    <h3 class="font-semibold text-gray-700 mb-2">Quickimport Instructions</h3>
    <p class="text-gray-600 mb-2">Paste JSON in the following format:</p>
    <pre class="bg-gray-100 text-xs rounded p-3 overflow-x-auto border border-gray-200">
[
  { "Player": "Snaps", "Hero Kills": 2, "Unit Kills": 83 },
  { "Player": "Rada#123", "Hero Kills": 4, "Unit Kills": 132 },
  { "Player": "#123456", "Hero Kills": 4, "Unit Kills": 132 },
  { "Player": "...", "Hero Kills": 2, "Unit Kills": 58 },
]
    </pre>
    <p class="text-gray-600">ChatGPT image instructions:</p>
    <ul class="list-disc list-inside text-gray-600">
      <li>Use the scoreboard image.</li>
      <li>Extract the player names, hero kills, and unit kills from the image.</li>
      <li>Output the extracted data in the provided JSON format, matching the example above.</li>
      <li>Only use the number after # if the player name is not visible</li>
    </ul>
  </div>

  <div class="my-6">
    <%= text_area_tag "quickimport_json", nil, placeholder: "Paste JSON here", rows: 2, class: "form-control w-full" %>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
