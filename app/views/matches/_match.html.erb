<div id="<%= dom_id match %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Played at:</strong>
    <%= match.played_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Seconds:</strong>
    <%= match.seconds %>
  </div>

  <div>
    <strong class="block font-medium mb-1">Appearances:</strong>
    <ul class="list-disc pl-5">
      <% match.appearances.each do |appearance| %>
        <li>
          <%= render partial: "matches/appearance", locals: { appearance: appearance } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
