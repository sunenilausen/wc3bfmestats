<% content_for :title, "matches" %>

<% cache_key = ["matches_index", @page, params[:sort], params[:direction], current_user&.admin?, StatsCacheKey.key] %>
<% cache cache_key do %>
<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Matches <span class="text-gray-500 text-2xl font-normal">(<%= @total_count %>)</span></h1>
    <div class="flex items-center gap-2">
      <% if current_user&.admin? %>
        <%= form_with url: sync_matches_path, method: :post, class: "flex items-center gap-2" do |f| %>
          <%= f.number_field :limit, value: 1, min: 1, max: 100, class: "w-20 rounded-md border border-gray-300 px-2 py-2 text-sm" %>
          <%= f.submit "Sync", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
        <% end %>
      <% end %>
      <% if can? :create, Match %>
        <%= link_to "New match", new_match_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
      <% end %>
    </div>
  </div>

  <div class="mt-4 mb-2 flex items-center gap-4">
    <span class="text-sm text-gray-500">Sort by:</span>
    <%= sort_link_for("date", "Date") %>
    <%= sort_link_for("duration", "Duration") %>
  </div>

  <div id="matches" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @matches.any? %>
      <% @matches.each do |match| %>
        <div class="flex flex-col sm:flex-row justify-between items-start pb-5 sm:pb-0 gap-2">
          <div class="flex-1">
            <div class="mb-1">
              <%= match.uploaded_at&.strftime("%Y-%m-%d") || match.created_at.strftime("%Y-%m-%d") %>
              <% if match.is_draw? %>
                <span class="ml-2 text-gray-600 font-medium">Draw</span>
              <% else %>
                <span class="ml-2 <%= match.good_victory ? 'text-green-600' : 'text-red-600' %> font-medium">
                  <%= match.good_victory ? "Good Victory" : "Evil Victory" %>
                </span>
              <% end %>
              <% if match.seconds.present? && match.seconds > 0 %>
                <span class="ml-2 text-gray-500">(<%= ChronicDuration.output(match.seconds, format: :short) %>)</span>
              <% end %>
              <% if match.ignored? %>
                <span class="ml-2 px-2 py-0.5 bg-red-100 text-red-700 text-xs rounded">Ignored</span>
              <% end %>
              <% if match.victory_overridden? %>
                <span class="ml-2 px-2 py-0.5 bg-yellow-100 text-yellow-700 text-xs rounded">Victory Overridden</span>
              <% end %>
            </div>
            <% good_players = match.appearances.select { |a| a.faction&.good? }.map { |a| a.player&.nickname }.compact %>
            <% evil_players = match.appearances.select { |a| a.faction && !a.faction.good? }.map { |a| a.player&.nickname }.compact %>
            <div class="text-sm">
              <span class="text-green-700"><%= good_players.join(", ") %></span>
              <span class="text-gray-400 mx-1">vs</span>
              <span class="text-red-700"><%= evil_players.join(", ") %></span>
            </div>
          </div>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", match, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% if can? :update, match %>
              <%= link_to "Edit", edit_match_path(match), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% end %>
            <% if can? :destroy, match %>
              <%= button_to "Destroy", match, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No matches found.</p>
    <% end %>

    <% if @total_pages > 1 %>
      <div class="flex justify-center items-center gap-2 mt-6 pt-4 border-t border-gray-200">
        <% if @page > 1 %>
          <%= link_to "First", matches_path(page: 1, sort: params[:sort], direction: params[:direction]), class: "px-3 py-1.5 rounded bg-gray-100 hover:bg-gray-200 text-sm" %>
          <%= link_to "Prev", matches_path(page: @page - 1, sort: params[:sort], direction: params[:direction]), class: "px-3 py-1.5 rounded bg-gray-100 hover:bg-gray-200 text-sm" %>
        <% end %>

        <span class="px-4 py-1.5 text-sm text-gray-600">
          Page <%= @page %> of <%= @total_pages %>
        </span>

        <% if @page < @total_pages %>
          <%= link_to "Next", matches_path(page: @page + 1, sort: params[:sort], direction: params[:direction]), class: "px-3 py-1.5 rounded bg-gray-100 hover:bg-gray-200 text-sm" %>
          <%= link_to "Last", matches_path(page: @total_pages, sort: params[:sort], direction: params[:direction]), class: "px-3 py-1.5 rounded bg-gray-100 hover:bg-gray-200 text-sm" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>
