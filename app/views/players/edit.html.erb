<% content_for :title, "Edit #{@player.nickname}" %>

<div class="w-full max-w-4xl">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="font-bold text-3xl">Edit Player</h1>
      <p class="text-gray-500 mt-1">
        <%= @player.nickname %>
        <% if @player.alternative_name.present? %>
          <span class="text-gray-400">(<%= @player.alternative_name %>)</span>
        <% end %>
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to "View Profile", @player, class: "rounded-md px-3.5 py-2 bg-gray-100 hover:bg-gray-200 font-medium text-sm" %>
      <%= link_to "All Players", players_path, class: "rounded-md px-3.5 py-2 bg-gray-100 hover:bg-gray-200 font-medium text-sm" %>
    </div>
  </div>

  <%= render "form", player: @player %>
</div>
