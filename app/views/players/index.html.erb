<% content_for :title, "Players" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-start">
    <div>
      <h1 class="font-bold text-4xl">Players <span class="text-gray-500 text-2xl font-normal">(<%= @player_count %>)</span></h1>
      <p class="text-gray-500 text-sm underline"><%= @observer_count %> observers</p>
    </div>
    <% if can? :create, Player %>
      <%= link_to "New player", new_player_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div class="mt-5">
    <%= form_with url: players_path, method: :get, class: "flex gap-2 flex-wrap items-center" do |f| %>
      <%= f.text_field :search, value: params[:search], placeholder: "Search by nickname or battletag...", class: "rounded-md border border-gray-300 px-3 py-2 flex-grow" %>
      <div class="flex items-center gap-1">
        <label for="min_games" class="text-sm text-gray-600">Min games:</label>
        <%= f.number_field :min_games, value: params[:min_games], min: 0, class: "rounded-md border border-gray-300 px-3 py-2 w-20" %>
      </div>
      <div class="flex items-center gap-1">
        <%= f.check_box :show_inactive, { checked: @show_inactive, class: "rounded border-gray-300" }, "1", "0" %>
        <label for="show_inactive" class="text-sm text-gray-600">Show inactive (2+ years)</label>
      </div>
      <%= f.submit "Filter", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
      <% if params[:search].present? || params[:min_games].present? || @show_inactive %>
        <%= link_to "Clear", players_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
      <% end %>
    <% end %>
  </div>

  <div id="players" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @players.any? %>
      <table class="min-w-full divide-y divide-gray-200 mb-5">
        <thead>
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nickname</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" title="Performance score (0-100)">
              <%= link_to players_path(sort: "ml_score", direction: @sort_column == "ml_score" && @sort_direction == "desc" ? "asc" : "desc", search: params[:search], min_games: params[:min_games], show_inactive: @show_inactive ? "1" : nil), class: "hover:text-gray-700" do %>
                PERF <%= @sort_column == "ml_score" ? (@sort_direction == "desc" ? "▼" : "▲") : "" %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to players_path(sort: "custom_rating", direction: @sort_column == "custom_rating" && @sort_direction == "desc" ? "asc" : "desc", search: params[:search], min_games: params[:min_games], show_inactive: @show_inactive ? "1" : nil), class: "hover:text-gray-700" do %>
                Custom Rating <%= @sort_column == "custom_rating" ? (@sort_direction == "desc" ? "▼" : "▲") : "" %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to players_path(sort: "matches_played", direction: @sort_column == "matches_played" && @sort_direction == "desc" ? "asc" : "desc", search: params[:search], min_games: params[:min_games], show_inactive: @show_inactive ? "1" : nil), class: "hover:text-gray-700" do %>
                Matches Played <%= @sort_column == "matches_played" ? (@sort_direction == "desc" ? "▼" : "▲") : "" %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to players_path(sort: "matches_observed", direction: @sort_column == "matches_observed" && @sort_direction == "desc" ? "asc" : "desc", search: params[:search], min_games: params[:min_games], show_inactive: @show_inactive ? "1" : nil), class: "hover:text-gray-700" do %>
                Matches Observed <%= @sort_column == "matches_observed" ? (@sort_direction == "desc" ? "▼" : "▲") : "" %>
              <% end %>
            </th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @players.each do |player| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">
                <%= player_display_name_html(player) %>
                <% if player.custom_rating_games_played.to_i < 30 %>
                  <span class="text-xs bg-yellow-100 text-yellow-800 px-1.5 py-0.5 rounded ml-1">NEW</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="<%= ml_score_color_class(player.ml_score) %> font-medium"><%= player.ml_score %></span>
                <%= tier_badge(player.ml_score) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                <%= player.custom_rating&.round %>
                <% if player.custom_rating_bonus_wins.to_i > 0 %>
                  <span class="text-xs text-blue-500" title="Bonus wins remaining">(+<%= player.custom_rating_bonus_wins %>)</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900"><%= player.matches.size %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900"><%= @observation_counts[player.battletag] %></td>
              <td class="px-6 py-4 whitespace-nowrap flex space-x-2">
                <%= link_to "Show", player, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
                <% if can? :update, player %>
                  <%= link_to "Edit", edit_player_path(player), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
                <% end %>
                <% if can? :destroy, player %>
                  <%= button_to "Destroy", player, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No players found.</p>
    <% end %>
  </div>
</div>
